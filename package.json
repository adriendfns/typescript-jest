{
  "name": "typescirpt-jest",
  "version": "1.0.0",
  "description": "A demo repo for testing typescript with jest",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "test": "jest",
    "test:pat": "yarn test --runInBand --verbose --t",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geshan/typescirpt-jest.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/geshan/typescirpt-jest/issues"
  },
  "homepage": "https://github.com/geshan/typescirpt-jest#readme",
  "dependencies": {
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "concurrently": "^7.6.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testMatch": [
      "<rootDir>/test/**/*.(spec|test).ts?(x)"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "**/src/**/**/*.{ts,tsx,js,jsx}",
      "!app.ts",
      "!index.ts",
      "!dist/**"     
    ],
    "coverageDirectory": "<rootDir>/test/.coverage",
    "testEnvironment": "node",
    "setupFiles": ["<rootDir>/test/setup.ts"]
  }
}
